<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>

<input type="hidden" value="{{id}}">

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comment on this post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-12 project-list">
    <h3>Comments:</h3>

    {{#each comments }}
    <div class="row mb-2">
        <p>
            {{comment}}
        </p>
        <p>
            Created by {{user.username}} on {{format_date date_created}}
        </p>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/post.js"></script>
