 <div class="col-md-6">
    <h3>Update Your Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">post name:</label>
        <input class="form-input" type="text" id="project-desc" name="project-name" value="{{ title }}" />
                <input class="form-input" type="hidden" id="post-id" name="project-name" value="{{ id }}" />
      </div>
      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="form-input" id="content" name="project-desc">{{ content }}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="update-btn">Update</button>
      </div>
    </form>
  </div>

  <script src="/js/update.js"></script>