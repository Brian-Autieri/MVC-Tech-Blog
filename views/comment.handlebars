<h1>MVC Tech Blog</h1>
<section id="blogComment">
    <section class="card">
        <div class="card-body">
            <h3 class="card-title">
                {{title}}
            </h3>
            <h4>Posted by {{user.username}} on {{format_date date_created}}</h4>
            <p class="card-text">{{content}}</p>
        </div>
    </section>
    {{#each comments}}
    <section class="card">
        <div class="card-body">
            <p>Comment</p>
            <p class="card-text">{{comment}}</p>
            <p>Posted by {{user.username}} on {{format_date date_created}}</p>
        </div>
    </section>
    {{/each}}
</section>
